<!DOCTYPE html>
<html>

<head>
  <%- include('../components/head.ejs') %>
</head>

<body class="detailsBody">

  <header>
    <div class="testH1">
      <h1><%= render.name %></h1>
    </div>

    <nav class="detailsNav">
      <a class="aDetails" href="/">HOME</a>
      <a class="aDetails" href="/boarding">BOARDING</a>
      <a class="aDetails" href="/stamped">STAMPED</a>
    </nav>

  </header>

  <main class="testCenter">
    <% let imageArray = [] %>
    <% render.photo.forEach(photo => { %>
    <% imageArray.push(photo.request.url) %>
    <% }) %>
    <% const special = imageArray[0] %>

    <div class="mainImage">
      <img class="firstImage" src="<%= imageArray[0] %>" alt="">
    </div>

    <div class="detailsDesc">
      <h2><%= render.description %></h2>
    </div>

    <div class="scroll">
      <% imageArray.shift() %>
      <% imageArray.forEach(photo => { %>
      <img class="rikoimages" src="<%= photo %>" alt="">
      <% }) %>
    </div>

  </main>
  <div class="formButtons">
    <form action="/boarding_pass" method="POST">
      <input type="hidden" name="city_name" value="<%= render.name %>">
      <input type="hidden" name="city_description" value="<%= render.description %>">
      <input type="hidden" name="special" value="<%=special%>">
      <input type="hidden" name="images0" value="<%= imageArray[0]%>">
      <input type="hidden" name="images1" value="<%= imageArray[1]%>">
      <input type="hidden" name="images2" value="<%= imageArray[2]%>">
      <input type="hidden" name="images3" value="<%= imageArray[3]%>">
      <input type="hidden" name="images4" value="<%= imageArray[4]%>">
      <input type="hidden" name="images5" value="<%= imageArray[5]%>">
      <input type="hidden" name="images6" value="<%= imageArray[6]%>">
      <input type="hidden" name="images7" value="<%= imageArray[7]%>">
      <input type="hidden" name="images8" value="<%= imageArray[8]%>">
      <button class="detailsButton" type="submit">SAVE TO BOARDING PASS</button>
    </form>
    <form action="/stamped_pass" method="POST">
      <input type="hidden" name="city_name" value="<%= render.name %>">
      <input type="hidden" name="city_description" value="<%= render.description %>">
      <input type="hidden" name="special" value="<%= special%>">
      <input type="hidden" name="images0" value="<%= imageArray[0]%>">
      <input type="hidden" name="images1" value="<%= imageArray[1]%>">
      <input type="hidden" name="images2" value="<%= imageArray[2]%>">
      <input type="hidden" name="images3" value="<%= imageArray[3]%>">
      <input type="hidden" name="images4" value="<%= imageArray[4]%>">
      <input type="hidden" name="images5" value="<%= imageArray[5]%>">
      <input type="hidden" name="images6" value="<%= imageArray[6]%>">
      <input type="hidden" name="images7" value="<%= imageArray[7]%>">
      <input type="hidden" name="images8" value="<%= imageArray[8]%>">
      <button class="detailsButton" type="submit">SAVE TO STAMPED</button>
    </form>
  </div>
</body>

</html>